version: 2.1

jobs:
  build:
    docker:
      - image: cimg/openjdk:17.0
    steps:
      - checkout
      - run:
          name: Compilar y ejecutar pruebas
          command: mvn clean test
      - run:
          name: Construir archivo JAR
          command: mvn package -DskipTests
      - store_artifacts:
          path: target/demo-0.0.1-SNAPSHOT.jar
          destination: app.jar

workflows:
  version: 2
  build_and_test:
    jobs:
      - build
